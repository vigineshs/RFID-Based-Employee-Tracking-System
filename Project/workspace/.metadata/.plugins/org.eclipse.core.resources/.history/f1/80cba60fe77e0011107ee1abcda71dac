		out.close();
		try {
			
					   
			pstmt=con.prepareStatement("UPDATE Details SET (firstname,lastname,age,resaddr,resno,mobno,bankname,branchname,accno,department,grade) =('"+firstname+"','"+lastname+"','"+age+"','"+resaddr+"','"+resno+"','"+mobno+"','"+ bankname +"','"+branchname+"','"+accno+"','"+department+"','"+grade+"')where username='"+ username+"'");
